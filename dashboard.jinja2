<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - Habit Tracker</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #ffd1dc, #e0bbff);
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #ff9aa2;
            padding: 1rem;
            text-align: center;
            font-size: 1.7rem;
            font-weight: bold;
            color: white;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .container {
            max-width: 1000px;
            margin: 30px auto;
            padding: 20px;
        }

        .nav-links {
            text-align: center;
            margin-bottom: 25px;
        }

        .nav-links a {
            text-decoration: none;
            color: white;
            background-color: #d291bc;
            padding: 10px 18px;
            margin: 0 8px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .nav-links a:hover {
            background-color: #b86fc6;
        }

        .add-habit-box {
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

        .add-habit-box h2 {
            margin-bottom: 15px;
            color: #8e44ad;
        }

        .add-habit-box form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .add-habit-box input[type="text"],
        .add-habit-box textarea {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        .add-habit-box button {
            background-color: #da70d6;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-habit-box button:hover {
            background-color: #ba55d3;
        }

        .habits-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }

        .habit-card {
            background-color: white;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: 0.3s ease;
            position: relative;
        }

        .habit-card:hover {
            transform: translateY(-5px);
        }

        .habit-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #ff69b4;
            margin-bottom: 10px;
        }

        .habit-description {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .habit-date {
            font-size: 0.85rem;
            color: #999;
        }

        .delete-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: #ff6b81;
            color: white;
            border: none;
            border-radius: 50%;
            width: 25px;
            height: 25px;
            font-size: 14px;
            cursor: pointer;
        }

        .summary {
            margin-top: 40px;
            background: #fff0f5;
            border-radius: 12px;
            padding: 15px;
        }

        .summary h3 {
            color: #8e44ad;
        }

        .back-btn {
            margin-top: 30px;
            display: inline-block;
            background-color: #8e44ad;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="navbar">
        üå∏ Habit Dashboard
    </div>

    <div class="container">
        <!-- Links to Monthly and Weekly -->
        <div class="nav-links">
            <a href="{{ url_for('monthly') }}">üìÖ Monthly Tracker</a>
            <a href="{{ url_for('weekly') }}">üóìÔ∏è Weekly Tracker</a>
        </div>

        <!-- Add Habit Form -->
        <div class="add-habit-box">
            <h2>Add New Habit</h2>
            <form method="POST">
                <input type="text" name="habit" placeholder="Enter a new habit..." required>
                <textarea name="description" rows="3" placeholder="Add a short description (optional)"></textarea>
                <button type="submit">‚ûï Add Habit</button>
            </form>
        </div>

        <!-- Habit Cards -->
        <div class="habits-grid">
            {% for habit in habits %}
            <div class="habit-card">
                <form action="{{ url_for('delete', habit_id=habit._id) }}" method="get">
                    <button class="delete-btn" title="Delete">√ó</button>
                </form>
                <div class="habit-name">{{ habit.habit }}</div>
                {% if habit.description %}
                    <div class="habit-description">{{ habit.description }}</div>
                {% endif %}
                <div class="habit-date">Added on: {{ habit.date.strftime('%d %B %Y') }}</div>
            </div>
            {% endfor %}
        </div>

        <!-- Summary Section -->
        {% if habit_summary %}
        <div class="summary">
            <h3>üìä Habit Summary</h3>
            <ul>
                {% for date, count in habit_summary.items() %}
                <li><strong>{{ date }}</strong>: {{ count }} habit(s)</li>
                {% endfor %}
            </ul>
        
            <div style="margin-top: 20px;">
                <label><input type="radio" name="view" value="weekly" checked> Weekly</label>
                <label><input type="radio" name="view" value="monthly"> Monthly</label>
                <button onclick="renderChart()">Show Visualization</button>
            </div>
        
            <canvas id="habitChart" width="400" height="200" style="margin-top:20px;"></canvas>
        </div>
        {% endif %}

        <!-- Back Button -->
        <a href="{{ url_for('index') }}" class="back-btn">‚Üê Back to Home</a>
    </div>
    <!-- Place this script before the closing </body> tag -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const weeklyData = {{ weekly_data | tojson }};
    const monthlyData = {{ monthly_data | tojson }};
    const chartCanvas = document.getElementById('habitChart');
    let habitChart;

    function renderChart() {
        const selectedView = document.querySelector('input[name="view"]:checked').value;
        const labels = selectedView === 'weekly'
            ? ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun']
            : [...Array(monthlyData.length).keys()].map(i => i + 1);

        const dataPoints = selectedView === 'weekly' ? weeklyData : monthlyData;

        if (habitChart) {
            habitChart.destroy();
        }

        habitChart = new Chart(chartCanvas, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: `Habits Tracked (${selectedView})`,
                    data: dataPoints,
                    backgroundColor: '#da70d6',
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Count'
                        }
                    }
                }
            }
        });
    }
</script>

</body>
</html>
